{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "strictNullChecks": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "types": [
            "node",
            "jest",
            "zone.js"
        ]
    },
    "include": [
        "./test/**/*.ts",
        "./packages/*/src/**/*.spec.ts"
    ]
}
